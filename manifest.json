{
  "manifest_version": 3,
  "name": "AI Text Polisher",
  "version": "1.0.1",
  "description": "AI Text Polisher, transform your selected text with AI, make it better!",
  "default_locale": "en",
  "permissions": [
    "contextMenus",
    "storage",
    "notifications",
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}